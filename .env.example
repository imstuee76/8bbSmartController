# Controller defaults (optional)
# Linux controller can run fully standalone with local backend (default = enabled).
CONTROLLER_USE_LOCAL_BACKEND=1
CONTROLLER_LOCAL_BACKEND_HOST=127.0.0.1
CONTROLLER_LOCAL_BACKEND_PORT=8088
CONTROLLER_LOCAL_BACKEND_RELOAD=0

# Optional: disable local backend and use remote backend/flasher host instead.
# CONTROLLER_USE_LOCAL_BACKEND=0
# CONTROLLER_BACKEND_URL=http://192.168.1.50:8088

CONTROLLER_AUTH_TOKEN=
